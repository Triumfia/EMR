         public void actionPerformed(ActionEvent arg0) {
            PrinterJob job = PrinterJob.getPrinterJob();
            
            boolean ok = job.printDialog();
            if (ok) {
               try {
                  job.print();
               } catch (PrinterException arg) {
               }
            }
         }
      });
